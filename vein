    AutoBlock = true,
    AutoClash = true,

    BlockRadius = 11,

    BlockPressDelay = 0,
    BlockReleaseDelay = 0,

    ClashKey = Enum.KeyCode.F, -- MUDA AQUI

    IgnoreOutsideArena = true,
    ArenaPartName = "Arena", -- MUDA PRO NOME REAL

    DisableWhenAFK = true,
    DisableEndRound = true
}

