-- ================= UTILS =================
local function normalizeId(id)
    return id:match("id=(%d+)") or id:match("%d+")
end

local function getRoot(char)
    return char and char:FindFirstChild("HumanoidRootPart")
end

local function distance(p1, p2)
    return (p1.Position - p2.Position).Magnitude
end

-- ================= ARENA CHECK =================
local ArenaPart = workspace:FindFirstChild(CONFIG.ArenaPartName)

local function inArena(char)
    if not CONFIG.IgnoreOutsideArena then return true end
    if not ArenaPart then return true end

    local root = getRoot(char)
    if not root then return false end

    local pos = ArenaPart.CFrame:PointToObjectSpace(root.Position)
    local size = ArenaPart.Size / 2

    return math.abs(pos.X) <= size.X
        and math.abs(pos.Y) <= size.Y
        and math.abs(pos.Z) <= size.Z
end

-- ================= AFK CHECK =================
local function isAFK(player)
    if not CONFIG.DisableWhenAFK then return false end

    local afk = player:FindFirstChild("AFK")
    if afk and afk.Value == true then
        return true
    end

    return false
end

-- ================= END ROUND CHECK =================
local function endRound()
    if not CONFIG.DisableEndRound then return false end
    local char = LOCAL_PLAYER.Character
    local hum = char and char:FindFirstChild("Humanoid")
    return hum and hum.Health <= 0
end

-- ================= BLOCK =================
local function doBlock(track)
    task.wait(CONFIG.BlockPressDelay)
    VirtualUser:Button2Down(Vector2.new(), workspace.CurrentCamera.CFrame)
    track.Stopped:Wait()
    task.wait(CONFIG.BlockReleaseDelay)
    VirtualUser:Button2Up(Vector2.new(), workspace.CurrentCamera.CFrame)
end

-- ================= AUTO CLASH =================
local ClashHeld = false

UserInputService.InputBegan:Connect(function(input, gp)
    if gp then return end
    if input.KeyCode == CONFIG.ClashKey then
        ClashHeld = true
    end
end)

UserInputService.InputEnded:Connect(function(input)
    if input.KeyCode == CONFIG.ClashKey then
        ClashHeld = false
    end
end)

-- ================= HANDLE ANIMATION =================
local function handleAnimation(player, track)
    if not CONFIG.AutoBlock then return end
    if player == LOCAL_PLAYER then return end
    if endRound() then return end
    if isAFK(LOCAL_PLAYER) then return end
    if UserInputService:GetFocusedTextBox() then return end

    local char = player.Character
    local localChar = LOCAL_PLAYER.Character
    if not (char and localChar) then return end

    if not inArena(char) or not inArena(localChar) then return end

    local id = normalizeId(track.Animation.AnimationId)
    if SAFE_ANIMATIONS[id] then return end

    local r1 = getRoot(char)
    local r2 = getRoot(localChar)
    if not (r1 and r2) then return end

    if distance(r1, r2) > CONFIG.BlockRadius then return end

    task.spawn(function()
        if CONFIG.AutoClash and ClashHeld then
            VirtualUser:Button1Down(Vector2.new(), workspace.CurrentCamera.CFrame)
            task.wait(0.05)
            VirtualUser:Button1Up(Vector2.new(), workspace.CurrentCamera.CFrame)
        else
            doBlock(track)
        end
    end)
end

-- ================= TRACK PLAYERS =================
local function trackPlayer(player)
    local function onChar(char)
        local hum = char:WaitForChild("Humanoid")
        local animator = hum:WaitForChild("Animator")

        animator.AnimationPlayed:Connect(function(track)
            handleAnimation(player, track)
        end)
    end

    if player.Character then onChar(player.Character) end
    player.CharacterAdded:Connect(onChar)
end

for _, p in ipairs(Players:GetPlayers()) do
    trackPlayer(p)
end

Players.PlayerAdded:Connect(trackPlayer)
